/*
* Ultrasonic Sensor HC-SR04 and Arduino Tutorial
*
* by Dejan Nedelkovski,
* www.HowToMechatronics.com
*
*/
#include <LiquidCrystal.h>
LiquidCrystal lcd(12, 11, 5, 4, 3, 2);

// defines pins numbers
const int LEDROUGE = 7;
const int LEDVERTE = 8;
const int trigPin = 9;
const int echoPin = 10;


// defines variables
long duration;
float distance;
float distance2;
float vitesse;
float distanceec;

void setup() {
pinMode(trigPin, OUTPUT); // Sets the trigPin as an Output
pinMode(echoPin, INPUT); // Sets the echoPin as an Input
pinMode(LEDROUGE , OUTPUT);
pinMode(LEDVERTE , OUTPUT);
lcd.begin(16, 2);
lcd.print("Radar ON!");
Serial.begin(9600); // Starts the serial communication
}

void loop() {
//LED 
digitalWrite(LEDROUGE, LOW);
digitalWrite(LEDVERTE, HIGH);
// Clears the trigPin
digitalWrite(trigPin, LOW);
delayMicroseconds(2);
// Sets the trigPin on HIGH state for 10 micro seconds
digitalWrite(trigPin, HIGH);
delayMicroseconds(10);
digitalWrite(trigPin, LOW);
// Reads the echoPin, returns the sound wave travel time in microseconds
duration = pulseIn(echoPin, HIGH);
// Calculating the distance
distance= duration*0.034/2;
distance = distance /100;
//if movement
if (distance < 4 ){
  // Prints the distance on the Serial Monitor
  delay(188);
  digitalWrite(trigPin, LOW);
  delayMicroseconds(2);
  // Sets the trigPin on HIGH state for 10 micro seconds
  digitalWrite(trigPin, HIGH);
  delayMicroseconds(10);
  digitalWrite(trigPin, LOW);
  duration = pulseIn(echoPin, HIGH);
// Calculating the distance
  distance2 = duration*0.034/2;
  distance2 = distance2 /100;
  if (distance2 < 4) {
      // set abs distance
      distanceec = abs(distance - distance2) ; // cm
      if (distanceec > 0.1){
      digitalWrite(LEDROUGE, HIGH);
      digitalWrite(LEDVERTE, LOW);
      // check distance
      lcd.setCursor(0,0);
      lcd.print("Distance 1: ");
      lcd.print(distance);
      lcd.print("m");
      lcd.setCursor(0,1);
      lcd.print("Distance 2: ");
      lcd.print(distance2);
      lcd.print("m");
      // Set speed
      vitesse = distanceec/ 0.189 ; // calcul vitesse v=d/t (m/s) delay
      vitesse = vitesse * 3.6; // calcul convertion km/h
      delay(2000);
      lcd.clear();
      lcd.setCursor(0,0);
      lcd.print("Distance: ");
      lcd.print(distanceec);
      lcd.print("m");
      lcd.setCursor(0,1);
      lcd.print("Vitesse: ");
      lcd.print(vitesse);
      lcd.print("KM/H");
      delay(5000);
      }
  lcd.clear();
  }
}
}
